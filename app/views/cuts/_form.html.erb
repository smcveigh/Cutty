    <%= f.label :tags %><br />
    <em>[cool tags control should go here]</em>
  </div>
  <div class="field">
    <%= f.label :language %><br />
    <%= f.collection_select :language_id, Language.all.sort_by(&:name), :id, :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_area :code, :size => "80x20" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
